import servicios.DireccionServicio as ds
import entidades.dictionary as dic

def crearUbiMovil():

    print("Ingrese el nombre de la ubicación Movil: ")
    nombre = input()

    dir = ds.crearDireccion()

    if dir != False:
        print("Ingrese el monto: ")
        monto = input()
        if monto <= 0:
            while monto <= 0 and not monto.isdigit:
                print("El monto debe ser un número mayor a cero, intente nuevamente: ")
                monto = input()

        if nombre[0] == "C":
            m = 11
            dicP = [None]*m
            k = int(nombre[1:])
            value = [dir, monto]                               ###ver
            dic.insertUbiMovil(m,dicP,k,nombre,value)

        elif nombre[0] == "P":
            m = 11
            dicC = [None]*m
            k = int(nombre[1:])
            value = [dir, monto]                               ###ver
            dic.insertUbiMovil(m,dicC,k,nombre,value)
    else:
        print("Dirección inválida")                            ###ver
